<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linlayoutparent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    	android:scrollbars="none">
<LinearLayout
    android:id="@+id/linlayoutchild"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@android:id/text2"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_weight="66.54"
        android:background="@drawable/bluebk"
        android:gravity="center"
        android:text="Iâ€™ve been living all my life abroad and I regret everything."
        android:textColor="@color/confession"
        android:textSize="24sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:text="What's going on?"
        android:textColor="@color/confession"
        android:textSize="18sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:text="I felt the exact same last year, it gets better!"
        android:textColor="@color/confession"
        android:textSize="18sp"
        android:textStyle="normal"
        android:typeface="serif" />
    
</LinearLayout>
</ScrollView>

<EditText
    android:id="@+id/reply"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:lines="2"
    android:hint="Reply..."
    android:inputType="text"
    android:imeOptions="actionSend" />
</RelativeLayout>