<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linlayoutparent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
	android:background="#080808"
    android:animateLayoutChanges="true">
    <ScrollView
        android:id="@+id/comment_scroll"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
        android:orientation="vertical"
    	android:scrollbars="none">
<LinearLayout
    android:id="@+id/linlayoutchild"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/confession"
        android:textSize="24sp"
    	android:padding="20dp"
        android:textStyle="normal"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="What's going on?"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:textColor="@color/confession"
        android:textSize="18sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:text="I felt the exact same last year, it gets better!"
        android:textColor="@color/confession"
        android:textSize="18sp"
        android:textStyle="normal"
        android:typeface="serif" />
    
</LinearLayout>
</ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:background="@drawable/border">
<EditText
    android:id="@+id/reply"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:inputType="textMultiLine"
    android:lines="2"
    android:cursorVisible="false"
    android:background="#ffffff"
    android:hint="Reply..."
    android:gravity="top"
    android:layout_gravity="center" />
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="postComment"
        android:gravity="center" 
        android:layout_gravity="center"/>
</LinearLayout>
</LinearLayout>